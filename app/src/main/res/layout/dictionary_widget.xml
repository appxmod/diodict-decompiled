<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/dict_widget_plate" android:background="@drawable/appwidget_bg" android:layout_width="282dp" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/dict_widget_top" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageButton android:id="@+id/dict_widget_setting" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/appwidget_setting" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/dict_widget_contents" android:layout_width="match_parent" android:layout_height="50.6dp" android:layout_marginBottom="8.6dp">
        <ImageButton android:gravity="center_vertical" android:id="@+id/dict_widget_left" android:background="@drawable/appwidget_left_bg" android:layout_width="22dp" android:layout_height="match_parent" android:layout_marginLeft="2.6dp" android:src="@drawable/appwidget_arrow_left"/>
        <ImageView android:id="@+id/dict_widget_img" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/dict_widget_right" android:layout_toRightOf="@+id/dict_widget_left" android:layout_centerInParent="true"/>
        <ImageButton android:gravity="center_vertical" android:id="@+id/dict_widget_right" android:background="@drawable/appwidget_right_bg" android:layout_width="22dp" android:layout_height="match_parent" android:layout_marginRight="2.6dp" android:src="@drawable/appwidget_arrow_right" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
